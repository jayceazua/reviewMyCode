<div class="form-container">
  <!-- TITLE -->
  <div class="form-title">
    <label for="code-title">Title:</label><br>
    <input class="form-title" id="code-title" type="text" name="title" value="{{codes.title}}"/>
  </div>
  <!-- DESCRIPTION -->
  <div class="form-description">
    <label for="code-description">Description:</label><br>
    <textarea class="form-description" id="code-description" name="description" rows="8" >{{codes.description}}</textarea>
  </div>
<!-- CODE SNIPPET -->
  <div class="form-snippet">
    <label for="code-snippet">Code:</label><br>
    <textarea class="form-snippet" id="code-snippet" name="codeSnippet" rows="28" >{{{codes.codeSnippet}}}</textarea>
  </div>
<!-- CODE REPO -->
  <div class="form-link">
    <label for="repo-link">Link to Repository:<small>(Optional)</small></label><br>
    <input class="form-link" id="repo-link" type="url" name="linkToRepo" value="{{codes.linkToRepo}}"/>
  </div>
</div>
